<UserControl x:Class="Reports.Views.ExternalReportMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reports.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <ContentControl prism:RegionManager.RegionName="MainExternalReportListRegion"/>

        <StackPanel Grid.Column="1">
            <Button Content="Nuovo"
                    Command="{Binding NewExternalReportCommand}"
                    IsEnabled="{Binding CanCreateExternalReport}"
                    Margin="5"/>

            <Button Content="Apri"
                    Command="{Binding OpenExternalReportCommand}"
                    Margin="5"/>        
        </StackPanel>
    </Grid>
</UserControl>
