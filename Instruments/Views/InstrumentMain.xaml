<UserControl x:Class="Instruments.Views.InstrumentMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Instruments.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
    
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            
        <GroupBox Header="Strumenti"
                  Grid.Column="0"
                  Grid.Row="0"
                  Grid.RowSpan="2">
                  
            <ListView ItemsSource="{Binding InstrumentList}"
                          SelectedItem="{Binding SelectedInstrument, Mode=TwoWay}"
                          Grid.Row="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Codice"
                                        DisplayMemberBinding="{Binding Code}"/>
                        <GridViewColumn Header="Tipo"
                                        DisplayMemberBinding="{Binding InstrumentType.Name}"/>
                    </GridView>
                </ListView.View>             
            </ListView>
                                      
        </GroupBox>
        
        <Grid Grid.Column="1"
              Grid.Row="0">
              
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>  
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Button Content="Nuovo"
                    Command="{Binding NewInstrumentCommand}"
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="5"/>

            <Button Content="Apri"
                    Command="{Binding OpenInstrumentCommand}"
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="5"/>

        </Grid>
        
        <GroupBox Header="Calendario tarature"
                  Grid.Column="1"
                  Grid.Row="1">
            <ListView ItemsSource="{Binding PendingCalibrationsList}"
                          SelectedItem="{Binding SelectedInstrument, Mode=TwoWay}"
                          Grid.Row="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Codice"
                                        DisplayMemberBinding="{Binding Code}"/>
                        <GridViewColumn Header="Tipo"
                                        DisplayMemberBinding="{Binding InstrumentType.Name}"/>
                        <GridViewColumn Header="Scadenza"
                                        DisplayMemberBinding="{Binding CalibrationDueDate, StringFormat=d}"/> 
                    </GridView>
                </ListView.View>   
            </ListView>
        </GroupBox>
    </Grid>
</UserControl>
