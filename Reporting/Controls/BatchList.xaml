<UserControl x:Class="Reporting.Controls.BatchList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reporting.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Margin="10">
    <ListView Name="MainList"
              IsManipulationEnabled="False"
              Margin="0">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="BATCH"
                                DisplayMemberBinding="{Binding Number}"/>
                <GridViewColumn Header="TIPO"
                                DisplayMemberBinding="{Binding Material.MaterialType.Code}"/>
                <GridViewColumn Header="LINEA"
                                DisplayMemberBinding="{Binding Material.MaterialLine.Code}"/>
                <GridViewColumn Header="COD.COLORE"
                                DisplayMemberBinding="{Binding Material.Recipe.Code}"/>
            </GridView>
        </ListView.View>
    </ListView>
</UserControl>
